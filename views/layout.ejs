          <li><a href="#">PRIVACY</a></li>
          <li><a href="#">CAREERS</a></li>
        </ul>
        <ul>
          <li><a href="#">HOME</a></li>
          <li><a href="#">ABOUT</a></li>
          <li><a href="#">CONTACT</a></li>
          <li><a href="#">CREATE ACCOUNT</a></li>
        </ul>
    </footer>

	<!-- Bootstrap JS -->
	<script src="bootstrap/js/bootstrap.min.js"></script>
  </body>
</html>
